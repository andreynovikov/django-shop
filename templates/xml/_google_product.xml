{% load static %}
{% load site %}
<item>
<g:id>{{ product.id }}</g:id>
<title>{{ product.title }}</title>
<g:description>{{ product.whatis|safe }} {{ product.yandexdescr|safe }} {{ product.descr|striptags }}</g:description>
<link>{% site_url_prefix %}{% url 'product' product.code %}?utm_source=google&amp;utm_term={{ product.id }}</link>
<g:image_link>{% site_url_prefix %}{% get_media_prefix %}{{ product.image_prefix }}.jpg</g:image_link>
{% if product.instock > 0 %}
<g:availability>in stock</g:availability>
{% else %}
<g:availability>out of stock</g:availability>
{% endif %}
<g:price>{{ product.cost }} RUB</g:price>
<g:brand>{{ product.manufacturer.name }}</g:brand>
{% if product.gtin %}
<g:gtin>{{ product.gtin }}</g:gtin>
{% else %}
<g:mpn></g:mpn>
<g:identifier_exists>no</g:identifier_exists>
{% endif %}
<g:condition>new</g:condition>
<g:adult>no</g:adult>
</item>
